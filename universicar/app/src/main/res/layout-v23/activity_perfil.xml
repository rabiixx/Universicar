    </LinearLayout>


    <TextView
        android:id="@+id/plazasInfoViaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:drawableStart="@drawable/ic_car_seat_30dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:text="3 Plazas"
        android:drawablePadding="10dp"
        android:layout_gravity=""
        android:textSize="23sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plazasInfoViaje2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:drawableStart="@drawable/ic_car_seat_30dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:text="3 Plazas"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_gravity=""
            android:textSize="23sp" />

    </LinearLayout>




    <Button
        android:id="@+id/añadirCochePerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir Coche" />


    <Button
        android:id="@+id/logoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
