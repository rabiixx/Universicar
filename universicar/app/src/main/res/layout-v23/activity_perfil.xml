<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/backBtnPerfil"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/salsa"
            android:text="@string/perfil"
            android:layout_marginStart="108dp"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.parse.ui.widget.ParseImageView
                    android:id="@+id/imagenPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:foreground="@drawable/rounded_fg"
                    android:layout_gravity="center"
                    android:src="@drawable/defavatar"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/usernamePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:padding="7dp"
                    android:background="@color/blue"
                    android:textColor="@color/black"
                    android:fontFamily="@font/salsa"
                    android:gravity="center"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/moreOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showPopup2"
                android:src="@drawable/ic_more_vert_white_30dp"
                android:layout_marginBottom="40dp"
                android:background="@color/blue" />

    </LinearLayout>


    <Button
        android:id="@+id/añadirCochePerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir Coche" />


    <Button
        android:id="@+id/verOpiniones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opiniones" />

    <Button
        android:id="@+id/logoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="Cerrar Sesion" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Coches"
        android:textSize="24sp"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/carListProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:smoothScrollbar="true" />


</LinearLayout>