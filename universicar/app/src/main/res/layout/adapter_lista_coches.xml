<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <LinearLayout
            android:id="@+id/cocheLayoutInfoViaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/carIconProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_car_compacto_60dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">



                    <TextView
                        android:id="@+id/carBrandProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/capriola"
                        android:gravity="center_vertical"
                        android:text="Citroen"
                        android:textAllCaps="true"
                        android:textColor="#000039"
                        android:textSize="18sp" />

                <TextView
                    android:id="@+id/carColorProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:gravity="center_vertical"
                    android:text="Blanco"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/carBrandIconProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_brand_fiat_40dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

<!--    <ImageButton-->
<!--        android:id="@+id/moreOptions"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:focusable="false"-->
<!--        android:focusableInTouchMode="false"-->
<!--        android:onClick="showMenuCars"-->
<!--        android:src="@drawable/ic_more_vert_black_30p"-->
<!--        android:background="@color/white"-->
<!--        android:layout_alignParentEnd="true"/>-->



    <ImageView
        android:id="@+id/moreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:src="@drawable/ic_more_vert_black_30p"
        android:clickable="true"
        android:focusable="true"
        android:onClick="showMenuCars"/>


</RelativeLayout>