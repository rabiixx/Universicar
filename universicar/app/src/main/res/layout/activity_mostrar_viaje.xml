<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarViajeActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#1dd1a1">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_keyboard_backspace_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/salsa"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="Informacion Viaje"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/defavatar" />

        <TextView
            android:id="@+id/conductor"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="rabiixx"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textColor="#0892d0"
            android:textSize="23sp"
            android:textStyle="bold"
            android:linksClickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_place_red_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/Origen2"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/origen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="BaraÃ±ain"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_place_red_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/Destino2"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/destino"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Burlada"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_calendar_30dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/fecha"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="10/12/2020"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_clock_30dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/hora"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/hora"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="10:15 AM"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/nAsientos"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:drawableStart="@drawable/ic_car_seat_30dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:text="3 Plazas"
            android:textColor="@color/black"
            android:textSize="23sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_euro_symbol_black_24dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="50"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:text="por plaza"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cocheLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/marcaCoche"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="Citroen"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAllCaps = "true"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/colorCoche"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Blanco"
                android:textSize="18sp"
                tools:ignore="NestedWeights,RtlCompat" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iconoCoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/ic_car_compacto_60dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:visibility="gone">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginVertical="15dp">

                    <TextView
                        android:id="@+id/userOpinionMiViaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/capriola"
                        android:text="rabiixx"
                        android:textColor="#000039"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/puntOpinionMiViaje"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/foodRatingBar"
                        android:numStars="5"
                        android:rating="5"
                        android:isIndicator="true"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenPerfilOpinionMiViaje"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/defavatar"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tituloOpinionMiViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="@font/salsa"
                android:textColor="#000039"
                android:text="Genial" />


            <TextView
                android:id="@+id/descOpinionMiViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Descripcion" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnOpinar"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:backgroundTint="#1dd1a1"
        android:text="Opinar"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnReservar"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:backgroundTint="#1dd1a1"
        android:text="Reservar"
        android:visibility="gone"/>

</LinearLayout>